  <!-- MOVEMENT RULES ////////////////////////////////////////////////////////-->
  <!-- Terrain Classes -->
  <!-- Land -->
  <TerrainClass Name="FlatGround"/>
  <TerrainClass Name="SoftGround"/>
  <TerrainClass Name="RoughGround"/>
  <TerrainClass Name="GentleHills"/>
  <TerrainClass Name="SteepHills"/>
  <TerrainClass Name="Mountains"/>
  <TerrainClass Name="Forest"/>
  <TerrainClass Name="Impassable"/>

  <!-- Water -->
  <TerrainClass Name="Ocean" Water="true" CapabilityNeededToPass="Oceanfaring"/>
  <TerrainClass Name="Sea" Water="true" CapabilityNeededToPass="Seafaring"/>
  <TerrainClass Name="Coastal" Water="true"/>
  <TerrainClass Name="NavigableRiver" Water="true"/>
  <TerrainClass Name ="UnnavigableRiver" Water="true"/>
  
  <!-- Movement Classes -->
  <!-- All terrain classes cost 1 move point unless otherwise specified -->
  <!-- Water terrain is impassable to non naval and land is impassable to naval unless otherwise specified -->
  <!-- Land -->
  <MovementClass Name="BaseLand" MovePoints="4" Naval="false" RoadModifier="0.66">
    <Impassable Class="Impassable"/>
    <Impassable Class="Mountains"/>
    <Impassable Class="SteepHills"/>
    <Impassable Class="Ocean"/>
    <Impassable Class="Sea"/>
    <Impassable Class="Coastal"/>
    <Terrain Class="NavigableRiver" Points="-1" CrossingOnly="true"/>
    <Terrain Class ="UnnavigableRiver" Points="-1" CrossingOnly="true"/>
    <Terrain Class="Forest" Points="2"/>   
  </MovementClass>
  <MovementClass Name ="Infantry" Base="BaseLand" MovePoints="4" Naval="false" RoadModifier="0.66">
    <Terrain Class ="SoftGround" Points="2"/>
  </MovementClass>
  <MovementClass Name ="Light Infantry" Base="Infantry" MovePoints="5" Naval="false" RoadModifier="0.66">
    <Terrain Class="Forest" Points="1"/>
    <Terrain Class ="SoftGround" Points="1"/>
  </MovementClass>
  <MovementClass Name ="Light Cavalry" Base="BaseLand" MovePoints="8" Naval="false" RoadModifier="0.8">
    <Terrain Class="Forest" Points="6"/>
    <Terrain Class ="SoftGround" Points="6"/>
  </MovementClass>
  <MovementClass Name ="Scout Cavalry" Base="BaseLand" MovePoints="10" Naval="false" RoadModifier="0.8">
    <Terrain Class="Forest" Points="3"/>
    <Terrain Class ="SoftGround" Points="5"/>
  </MovementClass>
  <MovementClass Name ="Heavy Cavalry" Base="BaseLand" MovePoints="6" Naval="false" RoadModifier="0.8">
    <Terrain Class="Forest" Points="4"/>
    <Terrain Class ="SoftGround" Points="4"/>
  </MovementClass>
  <MovementClass Name ="Chariot" Base="BaseLand" MovePoints="6" Naval="false" RoadModifier="0.8">
    <Terrain Class="Forest" Points="6"/>
    <Terrain Class ="SoftGround" Points="4"/>
  </MovementClass>
  <MovementClass Name ="Baggage Train" Base="BaseLand" MovePoints="3" Naval="false" RoadModifier="0.66">
    <Terrain Class="Forest" Points="3"/>
    <Terrain Class ="SoftGround" Points="3"/>
  </MovementClass>
  <MovementClass Name ="Settler" Base="BaseLand" MovePoints="3" Naval="false" RoadModifier="0.66">
    <Terrain Class="Forest" Points="3"/>
    <Terrain Class ="SoftGround" Points="3"/>
  </MovementClass>

  <!-- Naval -->
  <MovementClass Name="BaseNaval" MovePoints="6" Naval="true">
    <Impassable Class="UnnavigableRiver"/>
  </MovementClass> 
  <MovementClass Name="River Boat" MovePoints="6" Naval="true" Base="BaseNaval">
    <Impassable Class="Ocean"/>
    <Impassable Class="Sea"/>
    <Terrain Class="Coastal" Points="2"/>
  </MovementClass>
  <MovementClass Name="Small Ship" MovePoints="6" Naval="true" Base="BaseNaval">
    <Impassable Class="Ocean"/>
    <Terrain Class="NavigableRiver" Points="2"/>
  </MovementClass>
  <MovementClass Name="Large Ship" MovePoints="8" Naval ="true" Base="BaseNaval">
    <Impassable Class="NavigableRiver"/>
  </MovementClass>
  <MovementClass Name="Paddle Wheel Boat" MovePoints="8" Naval="true" Base="BaseNaval">
    <Impassable Class="Ocean"/>
    <Impassable Class="Sea"/>
    <Terrain Class="Coastal" Points="2"/>
  </MovementClass>
  
